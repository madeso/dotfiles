{
    // osx doesnt like the default option, there is toggle too, but not so sure about that one...
    "window.menuBarVisibility": "toggle",
    "workbench.colorTheme": "Solarized Light",
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "selection",
    "editor.rulers": [79, 99],
    // horizontal bar in <= traditional & @
    "editor.fontLigatures": "'ss02', 'ss03', 'ss05'",
    "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
    "workbench.statusBar.visible": true,
    "explorer.openEditors.visible": 0,
    "editor.minimap.enabled": false,
    "[plaintext]": {
        "editor.minimap.enabled": true,
        "editor.wordBasedSuggestions": false,
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    "python.linting.pylintEnabled": false,
    "window.titleBarStyle": "custom",
    "window.zoomLevel": -1,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": null,

    "editor.minimap.maxColumn": 100,
    "editor.minimap.side": "right",
    "editor.minimap.scale": 2,
    "editor.minimap.renderCharacters": false,
    "explorer.confirmDragAndDrop": false,

    "todohighlight.isEnable": true,
    "todohighlight.include": [
        "**/*.cpp",
        "**/*.cc",
        "**/*.h",
        "**/*.hh"
    ],
    "todohighlight.defaultStyle": {
        "color": "#586e75",
        "fontWeight": "bold",
        "backgroundColor": "inherit",
        "overviewRulerColor": "#eee8d5",
        "cursor": "arrow",
        "border": "0px solid #000",
        "borderRadius": "0px",
        "isWholeLine": false,
    },
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywordsPattern": "//[ ]*todo\\(([^)]+)\\):"
}
