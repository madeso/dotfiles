{
    // osx doesnt like the default option, there is toggle too, but not so sure about that one...
    "window.menuBarVisibility": "toggle",
    "explorer.openEditors.visible": 0,
    "workbench.statusBar.visible": true,
    "editor.minimap.enabled": false,
    "window.titleBarStyle": "custom",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.iconTheme": null,
    "editor.minimap.maxColumn": 100,
    "editor.minimap.side": "right",
    "editor.minimap.scale": 2,
    "editor.minimap.renderCharacters": false,
    "explorer.confirmDragAndDrop": false,
    "workbench.colorTheme": "Solarized Light",
    "editor.renderWhitespace": "none",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.guides.highlightActiveIndentation": true,
    "editor.rulers": [
        79,
        99
    ],
    "editor.guides.indentation": false,
    "editor.matchBrackets": "always",
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.stickyScroll.enabled": false,
    "explorer.fileNesting.enabled": false,
    // disable ligatures, traditional & @ rounder () {} longer |
    "editor.fontLigatures": "'calt' off, 'ss03', 'ss05', 'cv31', 'cv29', 'cv30'",
    // with ligatures: "editor.fontLigatures": "'ss02', 'ss03', 'ss05', 'cv31', 'cv29', 'cv30', 'ss08'",
    // references:
    // https://developer.mozilla.org/en-US/docs/Web/CSS/font-feature-settings
    // https://learn.microsoft.com/en-us/typography/opentype/spec/features_ae
    // https://github.com/tonsky/FiraCode/issues/1479
    "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
    "[plaintext]": {
        "editor.minimap.enabled": true,
        "editor.wordBasedSuggestions": false,
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    "python.linting.pylintEnabled": true,
    "todohighlight.isEnable": true,
    "todohighlight.include": [
        "**/*.cpp",
        "**/*.cc",
        "**/*.h",
        "**/*.hh"
    ],
    "todohighlight.defaultStyle": {
        "color": "#93a1a1",
        "fontWeight": "",
        "backgroundColor": "inherit",
        "overviewRulerColor": "#eee8d5",
        "cursor": "arrow",
        "border": "0px solid #000",
        "borderRadius": "0px",
        "isWholeLine": false
    },
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywordsPattern": "//[ ]*todo\\(([^)]+)\\):",
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // disable cmake prompt when opening projects
    "cmake.configureOnOpen": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "bold",
                    "foreground": "#000000"
                }
            },
            {
                "scope": "comment.block.documentation.cpp",
                "settings": {
                    "fontStyle": "",
                    "foreground": "#657b83"
                }
            }
        ]
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.inlineSuggest.enabled": true,
    "window.zoomLevel": -1,
    "extensions.ignoreRecommendations": true,
    "[glsl]": {
        "editor.defaultFormatter": "raczzalan.webgl-glsl-editor"
    },
    "debug.javascript.autoAttachFilter": "disabled",
    "[python]": {
        "editor.formatOnType": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // "all" | "gutter" | "overview" | "none"
    "scm.diffDecorations": "overview",
    "workbench.startupEditor": "none",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    }
}
